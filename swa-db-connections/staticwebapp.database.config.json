{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false
    },
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/rest"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": [
          "http://localhost:3000"
        ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Person": {
      "source": "dbo.MyTestPersonTable",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "Comics": {
      "source": "dbo.ComicsView",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "Creators": {
      "source": "dbo.Creators",
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "EpisodesByComicId": {
      "source": {
        "type": "stored-procedure",
        "object": "dbo.EpisodesByComicId",
        "parameters": {
          "ComicId": "ComicId"
        }
      },
      "rest": {
        "methods": [
          "get"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "execute"
          ]
        }
      ]
    },
    "Members": {
      "source": "dbo.Members",
      "rest": {
        "methods": [
          "post"
        ]
      },
      "permissions": [
        {
          "actions": [
            "*"
          ],
          "role": "anonymous"
        }
      ]
    },
    "MembersLogin": {
      "source": {
        "type": "stored-procedure",
        "object": "dbo.MembersLogin",
        "parameters": {
          "Email": "Email",
          "Combo": "Combo"
        }
      },
      "rest": {
        "methods": [
          "get"
        ]
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "execute"
          ]
        }
      ]
    }
  }
}